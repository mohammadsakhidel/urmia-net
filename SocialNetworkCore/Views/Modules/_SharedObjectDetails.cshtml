@using SocialNetApp.Models
@using CoreHelpers
@using SocialNetApp.Views.Models.Modules
@model SharedObjectDetailsModel

<script type="text/javascript" src="@Url.Content("~/Scripts/_SharedObjectDetailsHeadTags.min.js")"></script>
<div id="obj_details">
    @if (Model.SharedObject is Post)
    {
        Html.RenderPartial(Urls.ModuleViews + "_PostDetails.cshtml", Model.PostDetailsModel);
    }
    else if (Model.SharedObject is Album)
    {
        Html.RenderPartial(Urls.ModuleViews + "_AlbumDetails.cshtml", Model.AlbumDetailsModel);
    }
    else if (Model.SharedObject is Sharing)
    {
        Html.RenderPartial(Urls.ModuleViews + "_SharingDetails.cshtml", Model.SharingDetailsModel);
    }
    else if (Model.SharedObject is Photo)
    {
        if (Model.SharedObject is PostPhoto)
        {
            Response.Redirect(Model.UrlOfPostDetails);
        }
        else if (Model.SharedObject is AlbumPhoto)
        {
            Response.Redirect(Model.UrlOfAlbumDetails);
        }
        else
        {
            Html.RenderPartial(Urls.ModuleViews + "_PhotoDetails.cshtml", Model.PhotoDetailsModel);
        }
    }
</div>
<!-- words and settings: -->
<input type="hidden" id="w_read_more" value="@Resources.Words.ReadMore" />
<input type="hidden" id="w_read_less" value="@Resources.Words.ReadLess" />
<input type="hidden" id="config_show_more_length" value="@Digits.ShowMoreLength" />
<input type="hidden" id="w_write_your_comment" value="@Resources.Words.WriteYourComment" />
<input type="hidden" id="w_comment" value="@Resources.Words.Comment" />
<input type="hidden" id="w_share" value="@Resources.Words.Share" />
<input type="hidden" id="w_like" value="@Resources.Words.Like" />
<input type="hidden" id="w_unlike" value="@Resources.Words.Unlike" />
<input type="hidden" id="w_people_like_this" value="@Resources.Words.PeopleLikeThis" />
<input type="hidden" id="w_ajax_fail" value="@Resources.Messages.AjaxFail" />