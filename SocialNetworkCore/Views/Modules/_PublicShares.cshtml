@using CoreHelpers
@using SocialNetApp.Views.Models.Modules
@model PublicSharesModel
<script type="text/javascript" src="@Url.Content("~/Scripts/_PublicSharesHeadTags.min.js")"></script>
<div id="public_shares">
    <div id="ps_content">
        @{Html.RenderPartial(Urls.ModuleViews + "_PostEditor.cshtml", Model.PostEditorModel);}
        <div class="ps_title"><div><h2>@Resources.Words.PublicShares</h2></div></div>
        <div id="public_activities">
            @foreach (var ppModel in Model.PinnedPosts)
            {
                Html.RenderPartial(Urls.ModuleViews + "_SpecialPost.cshtml", ppModel);
            }
            @foreach (var actRec in Model.ActivityRecords)
            {
                Html.RenderPartial(actRec.Item1.PartialViewUrl, actRec.Item2);
            }  
        </div>
        @{Html.RenderPartial(Urls.ModuleViews + "_ViewMore.cshtml", Model.ViewMoreModel);}
    </div>
    <div id="ps_bar">
        @{Html.RenderPartial(Urls.ModuleViews + "_HomePageSuggestions.cshtml", Model.HomePageSuggestionsModel);}
    </div>
    <div class="clear">
    </div>
</div>
<!-- words and settings: -->
<input type="hidden" id="w_read_more" value="@Resources.Words.ReadMore" />
<input type="hidden" id="w_read_less" value="@Resources.Words.ReadLess" />
<input type="hidden" id="config_show_more_length" value="@Digits.ShowMoreLength" />
<input type="hidden" id="w_write_your_comment" value="@Resources.Words.WriteYourComment" />
<input type="hidden" id="w_comment" value="@Resources.Words.Comment" />
<input type="hidden" id="w_share" value="@Resources.Words.Share" />
<input type="hidden" id="w_like" value="@Resources.Words.Like" />
<input type="hidden" id="w_unlike" value="@Resources.Words.Unlike" />
<input type="hidden" id="w_people_like_this" value="@Resources.Words.PeopleLikeThis" />
<input type="hidden" id="w_ajax_fail" value="@Resources.Messages.AjaxFail" />