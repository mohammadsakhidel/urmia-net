@using CoreHelpers
@using SocialNetApp.Views.Models.Modules
@using SocialNetApp.Views.Models.Layouts
@{
    var viewmodel = (SiteViewModel)ViewBag.SiteViewModel;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="@Url.Content(Urls.SiteImages + "favicon.ico")" type="image/x-icon" />
    <link href="@Url.Content(SiteViewModel.StyleSheetsUrl + "Global.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content(SiteViewModel.StyleSheetsUrl + "Dialog.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content(SiteViewModel.StyleSheetsUrl + "jquery.Jcrop.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content(SiteViewModel.StyleSheetsUrl + "jquery.autocomplete.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-1.1.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <!-- plugin js files -->
    <script src="@Url.Content("~/Scripts/readmore.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.autosize.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.watermark.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.Jcrop.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.autocomplete.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Facebook.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/flowplayer/flowplayer-3.2.13.min.js")" type="text/javascript"></script>
    <!-- -->
    <script src="@Url.Content("~/Scripts/Global.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/PluginsInterface.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsHelper.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Dialog.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsTimer.min.js")" type="text/javascript"></script>
    @Html.Raw(Resources.Titles.MetaTags)
    <meta name="description" content="@Resources.Titles.Description" />
    <meta name="keywords" content="@Resources.Titles.Keywords" />
    @RenderSection("head")
</head>
<body>
    <div id="global_hidden_values">
        <input type="hidden" id="app_theme" value="@SiteViewModel.Theme" />
        <input type="hidden" id="app_lang" value="@SiteViewModel.Language" />
        <input type="hidden" id="fb_app_id" value="@System.Configuration.ConfigurationManager.AppSettings["FbAppId"]" />
        <input type="hidden" id="gv_memberId" value="@User.Identity.Name" />
        <input type="hidden" id="gw_YouLikeThis" value="@Resources.Words.YouLikeThis" />
        <input type="hidden" id="gw_YouAnd" value="@Resources.Words.YouAnd" />
        <input type="hidden" id="gw_PeopleElseLikeThis" value="@Resources.Words.PeopleElseLikeThis" />
        <input type="hidden" id="gw_PeopleLikeThis" value="@Resources.Words.PeopleLikeThis" />
        <input type="hidden" id="gw_ErrorDialogTitle" value="@Resources.Words.ErrorDialogTitle" />
        <input type="hidden" id="gw_ErrorDialogClose" value="@Resources.Words.Close" />
        <input type="hidden" id="gw_OK" value="@Resources.Words.OK" />
        <input type="hidden" id="gw_Cancel" value="@Resources.Words.Cancle" />
    </div>
    @{ Html.RenderPartial(Urls.ModuleViews + "_Header.cshtml", viewmodel.HeaderModel); }
    <div id="@(User.Identity.IsAuthenticated ? "middle_relative" : "middle")">
        @RenderSection("content")
        @{ Html.RenderPartial(Urls.ModuleViews + "_Footer.cshtml", viewmodel.FooterModel); }
    </div>
    @RenderBody()
    <div id="dialog" class="hide">
        <div id="dialog_view" class="dialog_view">
        </div>
        <input type="hidden" value="hid" id="dialog_status" />
        <input type="hidden" value="0" id="dialog_pg_scroll" />
        <div id="dialog_words">
            <input type="hidden" id="dw_Close" value="@Resources.Words.CloseDialog" />
            <input type="hidden" id="dw_DialogErrorTitle" value="@Resources.Words.ErrorDialogTitle" />
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="@Url.Content("~/Scripts/SignalR.min.js")" type="text/javascript"></script>
        <!-- *** Chat   *** -->
        <div id="chat_sessions_container">
            @{Html.RenderPartial(Urls.ModuleViews + "_ChatSessions.cshtml", viewmodel.ChatSessionsModel);}
        </div>
    }
</body>
</html>
